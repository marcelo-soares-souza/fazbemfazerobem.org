<%= form_for(pedido, html: { multipart: true }) do |f| %>
  <% if pedido.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pedido.errors.count, "error") %> encontrado(s):</h2>

      <ul>
      <% pedido.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <%= f.label 'Tipo de Ajuda', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.collection_select(:tipo, @tipos_ajuda, :first, :last, {}, { class: "form-control" } ) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'Projeto', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.collection_select(:projeto_id, @projetos, :id, :nome,  {}, { class: "form-control" } ) %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label 'Descrição', class: "col-sm-2 col-form-label col-form-label-lg" %>
    <div class="col-sm-10">
      <%= f.text_area :descricao, class: "form-control" %>
    </div>
  </div>

  <br/>
  <div class="actions">
    <%= f.submit "Enviar", class: "btn btn-primary" %>
  </div>
<% end %>
